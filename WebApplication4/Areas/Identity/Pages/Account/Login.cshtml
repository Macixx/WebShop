        <div class="container">
            <div class="row justify-content-center my-5">
                <div class="col-xl-5 col-md-8">
                    <form class="bg-white rounded shadow-5-strong p-5" id="account" method="post">
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input asp-for="Input.Email" type="email" id="form1Example1" class="form-control" autocomplete="off" />
                            <label asp-for="Input.Email" class="form-label" for="form1Example1">Adres email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>


